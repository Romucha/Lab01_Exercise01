@model Feedback

<h1>Are you sure you want to delete this feedback?</h1>

<div>
    <h4>Feedback</h4>
    <hr />
    <div>
        <div class="row">
            <div class="col-2">
                Student name:
            </div>
            <div class="col">
                @Model.StudentName
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                Sex:
            </div>
            <div class="col">
                @Model.Sex
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                Course:
            </div>
            <div class="col">
                @Model.Course
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                Technical coverage:
            </div>
            <div class="col">
                @Model.TechnicalCoverage
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                Suggestions:
            </div>
            <div class="col">
                @Model.Suggestions
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <form asp-action="Delete" method="post" asp-antiforgery="true">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Yes" class="btn btn-danger" />
            </form>
        </div>
        <div class="col-2">
            <form asp-action="Index">
                <input type="submit" value="No" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
